<div class="row">  
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading"><h4>Logowanie do Time off manager</h4></div>
      <div class="panel-body">
        <%= form_tag("/login") do %>
          <div class="form-group">
            <%= label_tag :email, "Email" %>
            <%= text_field_tag :email, nil, :class => 'form-control input-sm' %>
          </div>
          <div class="form-group">
            <%= label_tag :password, "Hasło" %>
            <%= password_field_tag :password, nil, :class => 'form-control input-sm' %>
          </div>
          <div class="actions">
            <%= submit_tag "Potwierdź", :class => 'btn btn-primary btn-sm btn-block' %>
          </div>
        <% end %>  
      </div>
    </div>
  </div>
</div>