<div class="row">  
  <div class="col-md-5">
    <%= form_for(@employee) do |f| %>
      <% if @employee.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @employee.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :first_name, "Imię" %>
        <%= f.text_field :first_name, :class=>"form-control input-sm" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name, "Nazwisko" %>
        <%= f.text_field :last_name, :class=>"form-control input-sm" %>
      </div>
      <div class="form-group">
        <%= f.label :emial, "Email" %>
        <%= f.text_field :emial, :class=>"form-control input-sm" %>
      </div>
      <div class="form-group">
        <%= f.label :holiday_off_limit, "Ilość wolnych dni" %>
        <%= f.text_field :holiday_off_limit, :class=>"form-control input-sm" %>
      </div>
      <div class="actions">
        <%= f.submit "OK", :class=>"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>