<div class="row">  
  <div class="col-md-5">
    <%= semantic_form_for @employee do |f| %>
      <% if @employee.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @employee.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.input :first_name, :label => "Imię", :input_html => {:class => "form-control input-sm"} %>
      </div>
      <div class="form-group">
        <%= f.input :last_name, :label => "Nazwisko", :input_html => { :class => "form-control input-sm"} %>
      </div>
      <div class="form-group">
        <%= f.input :email, :label => "Email", :input_html => { :class => "form-control input-sm"} %>
      </div>
      <div class="form-group">
        <%= f.input :holiday_off_limit, :label => "Ilość wolnych dni", :input_html => { :class => "form-control input-sm"} %> 
      </div>
      <div class="form-group">
        <%= f.input :password, :label => "Hasło", :input_html => { :class => "form-control input-sm"} %> 
      </div>
      <div class="form-group">
        <%= f.input :roles, :label => "Role", :as => :check_boxes, :collection => Role.all %> 
      </div>
      <div class="actions">
        <%= f.action :submit, :as => :button, :label => "OK", :button_html => { :class => "btn btn-success"} %>
      </div>
    <% end %>
  </div>
</div>